{
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "double"],
    "parser": "babel-eslint"
  },
  "parserOptions": {
    "parser": [1, "always"],
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true,
      "experimentalObjectRestSpread": true
    }
  }
}
