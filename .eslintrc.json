{
  "rules": {
    "semi": ["error", "always"],
    "quotes": ["error", "double"],
    "parser": [0, "always"]
  },
  "parserOptions": {
    "parser": "babel-eslint",
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
      "modules": true,
      "experimentalObjectRestSpread": true
    }
  }
}
